{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gradle",
      "type": "shell",
      "command": "./gradlew",
      "args": [
        "runClient",
        "--debug-jvm"
      ],
      "dependsOn": [
        "kill-java"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "kill-java",
      "type": "shell",
      "command": "pkill",
      "args": [
        "java"
      ]
    }
  ]
}